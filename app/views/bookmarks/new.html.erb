<h2>Add a new bookmark</h2>

<div class="block" id="block-forms">

  <div class="content">

    <div class="inner">
      <br />
      
      <%= form_for(@mark, :html => { :class => "form" }) do |f| %>
      
        <% if @mark.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@mark.errors.count, "error") %> prohibited this bookmark from being saved.</h3>
            <p>There were problems with the following fields:</p>
            <ul>
              <% @mark.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="group">
          <%= f.label :name, :class => "label" %>
          <%= f.text_field :name, :class => "text_field" %>
        </div>

        <div class="group">
          <%= f.label :url, :class => "label" %>
          <%= f.text_field :url, :class => "text_field" %>
        </div>

        <div class="group navform wat-cf">
          
          <button class="button" type="submit">
            <%= image_tag "web-app-theme/icons/tick.png" %>
            Add Bookmark
          </button>
          
          <%= link_to "Cancel", root_path, :class => "text_button_padding link_button" %>
          
        </div>

      <% end %>

    </div>

  </div>
  
</div>
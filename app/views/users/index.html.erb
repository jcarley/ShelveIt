
<div class="block" id="block-forms">

	<div class="content">

		<div class="inner">
			
			<%= form_for :presenter, :url => users_login_path, :html => { :class => "form" } do |f| %>
				
				<div class="group">
					<%= f.label :user_username, :class => "label" %>
					<%= f.text_field :user_username, :class => "text_field" %>
				</div>

				<div class="group">
					<%= f.label :user_password, :class => "label" %>
					<%= f.text_field :user_password, :class => "text_field" %>
				</div>
				
				<div class="group navform wat-cf">
					
					<button class="button" type="submit">
						<%= image_tag "web-app-theme/icons/tick.png" %>
						Login
					</button>
					
				</div>
				
			<% end %>
			
		</div>
		
	</div>
	
</div>
